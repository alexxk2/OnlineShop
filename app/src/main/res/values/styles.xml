<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="enforceTextAppearance">true</item>
        <item name="enforceMaterialTheme">true</item>
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@color/bottom_nav</item>
        <item name="itemRippleColor">@color/white</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavTextAppearance</item>
        <item name="itemTextAppearanceActive">@style/BottomNavTextAppearance</item>
        <item name="itemTextColor">@color/bottom_nav</item>
    </style>

    <style name="BottomNavTextAppearance" parent="TextAppearance.AppCompat.Caption">
        <item name="fontFamily">@font/sf_ui_regular</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="EditText">
        <item name="android:autofillHints">""</item>
        <item name="android:background">@drawable/rounder_background</item>
        <item name="fontFamily">@font/sf_ui_regular</item>
        <item name="android:textAppearance">@style/PlaceholderText</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
        <item name="android:lines">1</item>
        <item name="android:padding">0dp</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textCursorDrawable">@drawable/cursor_drawable</item>
        <item name="singleLine">true</item>
    </style>

    <style name="TextInputLayout">
        <item name="android:layout_marginHorizontal">@dimen/default_margin</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="endIconCheckable">true</item>
        <item name="endIconDrawable">@drawable/ic_close</item>
        <item name="endIconMode">clear_text</item>
        <item name="expandedHintEnabled">true</item>
        <item name="errorEnabled">true</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="hintEnabled">false</item>
        <item name="hintTextColor">@color/grey</item>
    </style>


    <style name="LargeTitle1">
        <item name="android:fontFamily">@font/sf_ui_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Title1">
        <item name="android:fontFamily">@font/sf_ui_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Title2">
        <item name="android:fontFamily">@font/sf_ui_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Title3">
        <item name="android:fontFamily">@font/sf_ui_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Title4">
        <item name="android:fontFamily">@font/sf_ui_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="Text1">
        <item name="android:fontFamily">@font/sf_ui_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Caption1">
        <item name="android:fontFamily">@font/sf_ui_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="ButtonText1">
        <item name="android:fontFamily">@font/sf_ui_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ButtonText2">
        <item name="android:fontFamily">@font/sf_ui_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ElementText">
        <item name="android:fontFamily">@font/sf_ui_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">9sp</item>
    </style>

    <style name="PriceText">
        <item name="android:fontFamily">@font/sf_ui_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="PlaceholderText">
        <item name="android:fontFamily">@font/sf_ui_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LinkText">
        <item name="android:fontFamily">@font/sf_ui_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="DefaultButton">
        <item name="android:background">@drawable/default_button_background</item>
        <item name="backgroundTint">@color/button_color_enabled</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/ButtonText2</item>
    </style>

    <style name="CustomChip" parent="Widget.Material3.Chip.Filter">
        <item name="android:textAppearance">@style/Title4</item>
        <item name="android:textColor">@color/chip_text_checked</item>
        <item name="checkedIcon">@null</item>
        <item name="chipBackgroundColor">@color/chip_background_checked</item>
        <item name="chipCornerRadius">20dp</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="closeIconTint">@color/white</item>
    </style>

    <style name="DiscountText" parent="ElementText">
        <item name="android:background">@drawable/discount_background</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">6dp</item>
        <item name="android:paddingVertical">3dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxHeight">20dp</item>
    </style>

    <style name="TextViewProfileMenuItem" parent="Title2">
        <item name="android:layout_marginHorizontal">@dimen/default_margin</item>
        <item name="android:layout_marginTop">@dimen/half_default_margin</item>
        <item name="android:background">@drawable/rounder_background</item>
        <item name="android:drawablePadding">@dimen/default_margin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">@dimen/half_default_margin</item>
        <item name="android:paddingVertical">9dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TabTextSelected" parent="Title2">
        <item name="background">@drawable/rounder_background_white</item>
    </style>
</resources>